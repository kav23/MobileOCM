
&НаКлиенте
Процедура КомандаВвод(Команда)
	Результат = Новый Структура;
	
	Результат.Вставить("Команда","РезультатВводаЧисла");
	
	Если Объект.ЭтоСтрока тогда
		Результат.Вставить("Значение", СтрокаВвода);
	иначе
		Результат.Вставить("Значение", Число( "0"+СтрокаВвода));
	КонецЕсли;
	Результат.Вставить("ИмяРеквизита", Объект.ИмяРеквизита);
	
	//Оповестить( "УГМК_РезультатВводаЧисла", Результат);
	Закрыть( Результат);
КонецПроцедуры

